<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Game2048.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/Theme.Game2048.AppWidgetContainer">

   <LinearLayout
       android:id="@+id/data_click"
       android:layout_centerInParent="true"
       android:layout_width="match_parent"
       android:layout_height="200dp"


       >
       <LinearLayout
           android:layout_width="0dp"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:orientation="horizontal"
               android:layout_weight="1">
           <TextView
               android:layout_width="0dp"
               android:gravity="end"
               android:layout_height="match_parent"
               android:textSize="25dp"
               android:text="@string/appwidget_text"
               android:layout_weight="2"/>
           <ImageView
               android:layout_width="40dp"
               android:layout_height="match_parent"
               android:layout_weight="0.1"
               android:src="@drawable/bg_data"
               />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:visibility="invisible"
                   />
           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:textSize="25dp"
               android:gravity="center_horizontal"
               android:text="@string/Score_String"
               android:layout_weight="0.5"/>
           <TextView
               android:id="@+id/data_Score"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:textSize="25dp"
               android:gravity="center"
               android:layout_weight="2"/>


       </LinearLayout>



   </LinearLayout>

</RelativeLayout>